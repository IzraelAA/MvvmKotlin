<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".java.activity.MainActivity"
    android:background="@color/colorWhite"
    >

    <ScrollView
        android:layout_above="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edt_origin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                app:met_underlineColor="@color/colorPrimaryDark"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="Kota asal"
                app:met_floatingLabelAlwaysShown="true"
                app:met_textColor="@color/colorPrimary"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edt_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:focusable="false"
                app:met_underlineColor="@color/colorPrimaryDark"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="Kota Tujuan"
                app:met_floatingLabelAlwaysShown="true"
                app:met_textColor="@color/colorPrimary"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edt_subdistrict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:focusable="false"
                app:met_underlineColor="@color/colorPrimaryDark"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="Kecamatan"
                app:met_floatingLabelAlwaysShown="true"
                app:met_textColor="@color/colorPrimary"/>


            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                app:fb_defaultColor="@color/colorPrimaryDark"
                app:fb_focusColor="@color/colorPrimary"
                app:fb_iconPosition="left"
                app:fb_radius="10dp"
                app:fb_text="CEK ONGKOS KIRIM"
                app:fb_textColor="#FFFFFF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga ongkos kirim / 1 KG"
                android:layout_margin="10dp"
                android:textColor="@color/colorBackground"
                android:gravity="center"/>

            <ProgressBar
                android:visibility="gone"
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <app.cekongkir.java.utils.NonScrollListView
                android:id="@+id/lst_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/txt_result"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="200dp"
                android:gravity="center"
                android:textSize="28sp"
                android:textStyle="bold|italic"
                android:text="--"
                android:textColor="@color/colorPrimary"
                android:fontFamily="monospace"/>

        </LinearLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:visibility="gone"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:adSize="SMART_BANNER"
        app:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>