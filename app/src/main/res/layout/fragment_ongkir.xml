<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".oldjavaversion.fragment.OngkirFragment"
    android:background="@android:color/transparent">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="CEK ONGKIR"
        android:gravity="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="10dp">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_origin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    app:met_underlineColor="@color/colorPrimaryDark"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelText="Kota asal"
                    app:met_textColorHint="@color/colorHint"
                    app:met_floatingLabelAlwaysShown="true"
                    app:met_textColor="@color/colorWhite"/>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:focusable="false"
                    app:met_underlineColor="@color/colorPrimaryDark"
                    app:met_floatingLabel="highlight"
                    app:met_textColorHint="@color/colorHint"
                    app:met_floatingLabelText="Kota Tujuan"
                    app:met_floatingLabelAlwaysShown="true"
                    app:met_textColor="@color/colorWhite"/>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_subdistrict"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:focusable="false"
                    app:met_underlineColor="@color/colorPrimaryDark"
                    app:met_floatingLabel="highlight"
                    app:met_textColorHint="@color/colorHint"
                    app:met_floatingLabelText="Kecamatan"
                    app:met_floatingLabelAlwaysShown="true"
                    app:met_textColor="@color/colorWhite"/>

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btn_preview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    app:fb_defaultColor="@color/colorPrimary"
                    app:fb_focusColor="@color/colorPrimaryDark"
                    app:fb_iconPosition="left"
                    app:fb_radius="10dp"
                    app:fb_text="CEK ONGKOS KIRIM"
                    app:fb_textColor="#FFFFFF" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Harga ongkos kirim / 1 KG"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorWhite"
                    android:textAlignment="center"/>

                <ProgressBar
                    android:visibility="gone"
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminateTint="@color/colorWhite"
                    android:layout_marginTop="@dimen/fab_margin"/>

                <app.cekongkir.oldjavaversion.utils.NonScrollListView
                    android:id="@+id/lst_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dividerHeight="10dp"
                    android:divider="@android:color/transparent"/>

            </LinearLayout>

        </ScrollView>


    </RelativeLayout>

</FrameLayout>
